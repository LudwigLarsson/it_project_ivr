<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ludwiglarsson.antiplanner.fragments.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_newFragment"
            app:destination="@id/newFragment"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_mainFragment_to_userFragment"
            app:destination="@id/userFragment"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_mainFragment_to_editFragment"
            app:destination="@id/editFragment"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_mainFragment_to_eventsFragment"
            app:destination="@id/eventsFragment"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/newFragment"
        android:name="com.ludwiglarsson.antiplanner.fragments.NewFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_new">
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.ludwiglarsson.antiplanner.fragments.UserFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_user">
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.ludwiglarsson.antiplanner.fragments.EditFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_edit">
        <!--<argument
            android:name="todoitem"
            app:argType="com.example.todoapp.model.TodoItem" />-->
    </fragment>
    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.ludwiglarsson.antiplanner.fragments.EventsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_events">
    </fragment>
</navigation>