<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12sp"
                    android:background="@android:color/transparent"
                    android:text="@string/save"
                    android:layout_marginTop="11sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/smthtodo"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_below="@+id/save"
                    android:layout_marginTop="30sp"
                    android:layout_marginHorizontal="16sp"
                    android:hint="Что надо сделать..."
                    android:padding="16dp"
                    android:gravity="start|top"
                    android:background="@drawable/transparent_corners" />

                <TextView
                    android:id="@+id/importance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/smthtodo"
                    android:layout_marginTop="30sp"
                    android:layout_marginLeft="16sp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Важность"/>

                <TextView
                    android:id="@+id/change_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal_priority"
                    android:layout_marginLeft="16sp"
                    android:layout_marginTop="12sp"
                    android:textColor="@color/dark_green"
                    android:layout_below="@+id/importance"/>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/change_priority"
                    android:layout_marginVertical="32sp"
                    android:layout_marginHorizontal="16sp"
                    android:background="@color/grey" />


                <TextView
                    android:id="@+id/deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_marginTop="30sp"
                    android:layout_marginLeft="16sp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Сделать до"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deadline"
                    android:layout_marginLeft="16sp"
                    android:layout_marginTop="16sp"
                    android:textColor="@color/dark_green"
                    android:text=""/>

                <TextView
                    android:id="@+id/created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="16sp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Дата создания"/>

                <TextView
                    android:id="@+id/creationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/created"
                    android:layout_marginLeft="16sp"
                    android:layout_marginTop="16sp"
                    android:textColor="@color/dark_green"
                    android:text=""/>

                <Switch
                    android:id="@+id/switchh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_marginRight="6sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30sp"/>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/creationDate"
                    android:layout_marginVertical="32sp"
                    android:layout_marginHorizontal="16sp"
                    android:background="@color/grey" />


                <ImageView
                    android:id="@+id/del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_marginTop="14sp"
                    android:layout_marginRight="-6sp"
                    android:background="@drawable/delete"
                    android:layout_marginLeft="16sp"/>


            </RelativeLayout>

        </FrameLayout>

    </RelativeLayout>
</layout>